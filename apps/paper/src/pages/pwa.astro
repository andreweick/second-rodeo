---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Upload - Second Rodeo PWA">
  <main class="pwa-container">
    <h1>Upload Content</h1>

    <div id="status" class="status-message">Loading...</div>
    <div id="error-message" class="error-message" style="display: none;"></div>
    <div id="success-message" class="success-message" style="display: none;"></div>

    <button id="retry-location-btn" class="retry-button" style="display: none;">
      Retry Location
    </button>

    <form id="upload-form">
      <section class="content-type-section">
        <h2>Content Type</h2>
        <div class="checkbox-group">
          <label class="checkbox-label">
            <input type="radio" name="content-type" value="checkins" checked />
            <span>Checkin</span>
          </label>
          <label class="checkbox-label">
            <input type="radio" name="content-type" value="chatter" />
            <span>Chatter</span>
          </label>
        </div>
      </section>

      <section class="location-section">
        <h2>Select Location</h2>

        <div class="manual-coords-form" id="manual-coords-form">
          <label>Copy coordinates from Maps, then paste here:</label>
          <button type="button" id="paste-coords-btn" class="paste-coords-button">
            üìã Paste Coordinates from Clipboard
          </button>
        </div>

        <div id="mini-map-container" class="mini-map-container" style="display: none;">
          <img id="mini-map-img" src="" alt="Location map" class="mini-map-img" />
        </div>

        <div id="location-options" class="location-options"></div>
      </section>

      <section class="content-section">
        <h2>Content</h2>

        <div class="form-group">
          <label for="title">Title (optional)</label>
          <input type="text" id="title" name="title" class="form-input" />
        </div>

        <div class="form-group">
          <label for="content">Content *</label>
          <textarea id="content" name="content" class="form-input" rows="5" required></textarea>
        </div>

        <div class="form-group">
          <label class="checkbox-label">
            <input type="checkbox" name="publish" checked />
            <span>Publish immediately</span>
          </label>
        </div>
      </section>

      <button type="submit" class="submit-button">Upload</button>
    </form>

    <button id="request-location-btn" class="request-location-button">
      üìç Request Location Permission
    </button>

    <div class="debug-toggle-section">
      <label class="checkbox-label">
        <input type="checkbox" id="debug-toggle" />
        <span>Show debug info</span>
      </label>
    </div>

    <div id="debug-info" class="debug-info" style="display: none;">
      <h3>Debug Info</h3>
      <div id="debug-content"></div>
    </div>
  </main>
</Layout>

<script src="../scripts/pwa.ts"></script>

<style>
  .pwa-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 1rem;
  }

  h1 {
    font-size: 2rem;
    margin-bottom: 1.5rem;
    font-weight: bold;
  }

  h2 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
    font-weight: 600;
  }

  .status-message {
    padding: 1rem;
    background-color: #f3f4f6;
    border-radius: 0.5rem;
    margin-bottom: 1rem;
    text-align: center;
  }

  .error-message {
    padding: 1rem;
    background-color: #fee;
    color: #c00;
    border-radius: 0.5rem;
    margin-bottom: 1rem;
    border: 1px solid #fcc;
  }

  .success-message {
    padding: 1rem;
    background-color: #efe;
    color: #060;
    border-radius: 0.5rem;
    margin-bottom: 1rem;
    border: 1px solid #cfc;
  }

  .retry-button {
    width: 100%;
    padding: 1rem;
    background-color: #f59e0b;
    color: white;
    border: none;
    border-radius: 0.5rem;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    min-height: 54px;
    margin-bottom: 1.5rem;
    transition: background-color 0.2s;
  }

  .retry-button:hover {
    background-color: #d97706;
  }

  .retry-button:active {
    background-color: #b45309;
  }

  .request-location-button {
    width: 100%;
    padding: 1rem;
    background-color: #ef4444;
    color: white;
    border: none;
    border-radius: 0.5rem;
    font-size: 1.125rem;
    font-weight: 600;
    cursor: pointer;
    min-height: 54px;
    transition: background-color 0.2s;
    margin-top: 2rem;
  }

  .request-location-button:hover:not(:disabled) {
    background-color: #dc2626;
  }

  .request-location-button:active:not(:disabled) {
    background-color: #b91c1c;
  }

  .request-location-button:disabled {
    cursor: not-allowed;
  }

  .request-location-button.has-permission {
    background-color: #10b981;
    cursor: default;
  }

  .request-location-button.has-permission:hover {
    background-color: #10b981;
  }

  .debug-toggle-section {
    margin-top: 1.5rem;
    padding: 1rem;
    background-color: #f9fafb;
    border-radius: 0.5rem;
  }

  .debug-info {
    margin-top: 2rem;
    padding: 1rem;
    background-color: #f9fafb;
    border: 1px solid #e5e7eb;
    border-radius: 0.5rem;
    font-size: 0.875rem;
    font-family: monospace;
  }

  .debug-info h3 {
    font-size: 1rem;
    margin-bottom: 0.5rem;
    font-weight: 600;
  }

  #debug-content {
    white-space: pre-wrap;
    word-break: break-all;
  }

  .manual-coords-form {
    margin-bottom: 1.5rem;
    padding: 1rem;
    background-color: #fffbeb;
    border: 2px solid #fbbf24;
    border-radius: 0.5rem;
  }

  .manual-coords-form label {
    display: block;
    margin-bottom: 0.75rem;
    font-weight: 600;
    color: #92400e;
    font-size: 0.9rem;
  }

  .paste-coords-button {
    width: 100%;
    padding: 1rem;
    background-color: #fbbf24;
    color: #78350f;
    border: none;
    border-radius: 0.5rem;
    font-size: 1.125rem;
    font-weight: 600;
    cursor: pointer;
    min-height: 54px;
    transition: background-color 0.2s;
  }

  .paste-coords-button:hover {
    background-color: #f59e0b;
  }

  .paste-coords-button:active {
    background-color: #d97706;
  }

  .mini-map-container {
    margin-bottom: 1.5rem;
    border: 2px solid #10b981;
    border-radius: 0.5rem;
    overflow: hidden;
    background-color: #f0fdf4;
    height: 120px;
  }

  .mini-map-img {
    width: 100%;
    height: 120px;
    object-fit: cover;
    display: block;
  }

  section {
    margin-bottom: 2rem;
  }

  .checkbox-group {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .checkbox-label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1rem;
    cursor: pointer;
    padding: 0.75rem 1rem;
    border: 2px solid #e5e7eb;
    border-radius: 0.5rem;
    min-height: 44px;
  }

  .checkbox-label input[type="radio"],
  .checkbox-label input[type="checkbox"] {
    width: 20px;
    height: 20px;
    cursor: pointer;
  }

  .checkbox-label:has(input:checked) {
    border-color: #3b82f6;
    background-color: #eff6ff;
  }

  .location-options {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .location-option {
    width: 100%;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-align: left;
    padding: 0.5rem;
    border: 2px solid #e5e7eb;
    border-radius: 0.5rem;
    background-color: #fff;
    cursor: pointer;
    transition: all 0.2s;
    min-height: 56px;
    font-size: 0.85rem;
  }

  .location-option:hover {
    border-color: #3b82f6;
    background-color: #f9fafb;
  }

  .location-option:active {
    background-color: #eff6ff;
  }

  .location-option.selected {
    border-color: #3b82f6;
    border-width: 3px;
    background-color: #dbeafe;
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  }

  .location-photo,
  .location-photo-placeholder {
    width: 48px;
    height: 48px;
    object-fit: cover;
    border-radius: 0.375rem;
    flex-shrink: 0;
  }

  .location-photo-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f3f4f6;
    font-size: 1.25rem;
  }

  .location-text {
    flex: 1;
    min-width: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .location-name {
    font-weight: 600;
    margin-bottom: 0.125rem;
    font-size: 0.85rem;
    line-height: 1.2;
  }

  .location-address {
    font-size: 0.7rem;
    color: #6b7280;
    line-height: 1.3;
  }

  .location-checkmark {
    font-size: 1.5rem;
    color: #2563eb;
    font-weight: bold;
    opacity: 0;
    transition: opacity 0.2s;
    flex-shrink: 0;
    align-self: center;
  }

  .location-option.selected .location-checkmark {
    opacity: 1;
  }

  .form-group {
    margin-bottom: 1rem;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
  }

  .form-input {
    width: 100%;
    padding: 0.75rem;
    border: 2px solid #e5e7eb;
    border-radius: 0.5rem;
    font-size: 1rem;
    min-height: 44px;
  }

  .form-input:focus {
    outline: none;
    border-color: #3b82f6;
  }

  textarea.form-input {
    resize: vertical;
    font-family: inherit;
  }

  .submit-button {
    width: 100%;
    padding: 1rem;
    background-color: #3b82f6;
    color: white;
    border: none;
    border-radius: 0.5rem;
    font-size: 1.125rem;
    font-weight: 600;
    cursor: pointer;
    min-height: 54px;
    transition: background-color 0.2s;
  }

  .submit-button:hover {
    background-color: #2563eb;
  }

  .submit-button:disabled {
    background-color: #9ca3af;
    cursor: not-allowed;
  }

  .submit-button:active:not(:disabled) {
    background-color: #1d4ed8;
  }

  /* Mobile optimizations */
  @media (max-width: 640px) {
    .pwa-container {
      padding: 0.75rem;
    }

    h1 {
      font-size: 1.5rem;
    }

    h2 {
      font-size: 1.125rem;
    }
  }
</style>
